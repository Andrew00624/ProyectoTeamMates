<h1>Detalle del torneo</h1> 

<h2>{{this.title}}</h2>

<form action="/partidos/detalle-torneo/{{this._id}}" method="POST">
  <input type="submit">Inscribirse al torneo</input>
</form>

<div>{{this.location.address}}</div>
<p>{{location.coordinates.[1]}}</p>

<div id="map"></div>

<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDJuHH2jP3PIpI1FVuWijujzw41ZrVgPwU"></script>



<script>

function map (){
  const map = new google.maps.Map((
    document.getElementById('map')
  ),
  {
    zoom:15,
    center:{
      lat:{{location.coordinates.[1]}},
      lng:{{location.coordinates.[0]}}
    }
  })
  var image = {
    url: "/images/marker.png",
    scaledSize:new google.maps.Size (50,50)
  }
  const marker = new google.maps.Marker({
    map:map,
    position:{
      lat:{{location.coordinates.[1]}},
      lng:{{location.coordinates.[0]}}
    },
    animation:google.maps.Animation.BOUNCE,
    icon: image
  })
}

map()

</script>


